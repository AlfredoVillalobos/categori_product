<p id="notice"><%= notice %></p>

<h1>Categories</h1>
<div class='row'>
  <div class='col-md-6'>
    <table class="table border">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= link_to category.name.capitalize, category %></td>
            <td><%= category.products.count %></td>
            <td><%= link_to 'Edit', edit_category_path(category), class:'btn btn-success text-white' %></td>
            <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger text-white' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<%= link_to 'New Category', new_category_path, class:'btn btn-primary text-white' %>
